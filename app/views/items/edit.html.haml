.text-center
  = @item.serial
.form-wrapper
  = simple_form_for @item, html: { class: 'form-horizontal', multipart: true } do |f|
    .form-group
      = f.input :equipment_type
    .form-group.text-center
      = f.input :model_number
    .form-group.text-center
      = f.input :serial
    .form-group.text-center
      = f.input :description
    .form-group.text-center
      = f.input :purchase_date
    .form-group.text-center
      = f.button :submit, class: 'btn-success'
  .text-center.edit-links
  = link_to "Delete Post", item_path(@item), method: :delete, data: { confirm: "Are you sure you want to delete this item?" }
  |
  = link_to "cancel", items_path